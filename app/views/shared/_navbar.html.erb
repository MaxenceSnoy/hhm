<div id="up-anchor"></div><div class="navbar-wagon" >
  <!-- Logo -->
  <% if owner_signed_in? %>
  <%= link_to mydashboard_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo3.png" %>
  <% end %>
  <% else %>
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "logo3.png" %>
  <% end %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-left">

  <div class="hidden-sm hidden-xs">
<!--     homepage navbar -->

  <% if controller.controller_name == "pages" && controller.action_name == "home"%>

    <div class="nav">
        <ul class="list-inline">
            <li><a href="#about-anchor">About</a></li>
            <li><a href="#product-anchor">Product</a></li>
            <li><a href="#setup-anchor">Set up</a></li>
            <li><a href="#pricing-anchor">Pricing</a></li>
            <li><a href="#contact-anchor">Contact</a></li>
        </ul>
    </div>

  <% end %>

  </div>



    <!-- Different navigation if login or not -->
    <% if owner_signed_in? || renter_signed_in? %>

    <!-- Notification -->


    <!-- Profile picture and dropdown -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>

        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <%= link_to flats_path do %>
            <i class="fa fa-home"></i>  <%= t ".dashboard", default: "Dashboard" %>
            <% end %>
          </li>
          <li>
            <%= link_to "#" do %>
            <i class="fa fa-user"></i> <%= t ".profile", default: "Profile" %>
            <% end %>
          </li>
          <li>
            <%= link_to renters_path do %>
            <i class="fa fa-home"></i>  <%= t ".profile", default: "Tenants" %>
            <% end %>
          </li>
          <li>
            <% if owner_signed_in? %>
            <%= link_to destroy_owner_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
            <% end %>
            <% else %>
            <%= link_to destroy_renter_session_path, method: :delete do %>
            <i class="fa fa-sign-out"></i>  <%= t ".sign_out", default: "Log out" %>
            <% end %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <% else %>

    <!-- Login text link -->

    <button type="button" class="submit-btn" data-toggle="modal" data-target=".bs-example-modal-lg">Start Now</button>

    <% end %>

    <!-- Button (call-to-action) -->

  </div>

<!-- Dropdown list appearing on mobile only -->

</div>

<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Who are you?</h4>
      </div>
      <div class="modal-body">
        <%= link_to t(".sign_in", default: "Login as an owner"), new_owner_session_path, class: "btn btn-primary" %>
        <!-- Login text link -->
        <%= link_to t(".sign_in", default: "Login as a renter"), new_renter_session_path, class: "btn btn-primary" %>
      </div>
      <div class="modal-footer">
      </div>

    </div>
  </div>
</div>


