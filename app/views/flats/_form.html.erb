
    <%= simple_form_for(@flat) do |f| %>
      <%= f.error_notification %>
      <div class="form-actions">
        <%= f.button :submit, :class => "submit-btn" %>
      </div>

      <div class="form-inputs">
        <%= f.input :flat_name %>
        <%= f.input :flat_type %>
        <%= f.input :floor %>
        <%= f.input :flat_number %>
        <%= f.input :address %>
        <%= f.input :city %>
        <%= f.input :postal_code %>
        <%= f.input :country %>
        <br>
        <%= f.input :syndicate %>
        <br>
        <%= f.input :description %>
        <br>
        <%= f.input :loan_cost %>
        <%= f.input :tax_cost %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, :class => "submit-btn" %>
      </div>
    <% end %>

