<%= simple_form_for [@flat, @contract] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :rent_start %>
    <%= f.input :rent_end %>
    <%= f.association :renter, label_method: :email %>
    <%= f.input :rent_amount %>
    <%= f.input :warranty_amount %>
    <%= f.input :pay_day, placeholder: "which day of each month day the payment need to be processed" %>
    <%= f.input :active, collection: [:Active, :Inactive, :Pending, :Expired] %>
    <%= f.input :days_to_reminder %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "submit-btn" %>
  </div>
<% end %>
