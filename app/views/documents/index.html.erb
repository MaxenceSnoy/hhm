<p id="notice"><%= notice %></p>

<h1>Listing Documents</h1>

<table>
  <thead>
    <tr>
      <th>Contract</th>
      <th>Type</th>
      <th>Expiration date</th>
      <th>Name</th>
      <th>Reminder sent date</th>
      <th>Days to reminder</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.contract %></td>
        <td><%= document.type %></td>
        <td><%= document.expiration_date %></td>
        <td><%= document.name %></td>
        <td><%= document.reminder_sent_date %></td>
        <td><%= document.days_to_reminder %></td>
        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

