<div class="container">
  <h1>Listing Documents - <%= Flat.find(params[:flat_id]).flat_type %> <%= Flat.find(params[:flat_id]).flat_name %></h1>

  <table class="table table-responsive table-striped table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th class="text-center">Format</th>
        <th>Type</th>
        <th>Expiration date</th>
        <th>Reminder sent</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @documents.each do |document| %>

          <tr>
              <td><%= document.id %></td>
              <% if document.attachment.to_s == "" %>
                <td class="text-center"> no doc </td>
              <% else %>
                <td class ="text-center"><%= link_to(flat_document_path(@flat, document)) do %>
                  <i class="fa fa-file-pdf-o fa-2x"></i>
                <% end %> </td>
            <% end %>


           <!--   <td>
              <%= cl_image_tag(document.attachment, :format => :jpg, :width=>70, :height=>90, :border=>"1px_solid_black", :crop=>"fill"  ) %>
            </td> -->



              <td><%= document.name %></td>
              <td><%= document.doc_type %></td>
              <td><%= document.expiration_date %></td>
              <td><%= document.reminder_sent_date %></td>
              <td><%= link_to(flat_document_path(@flat, document)) do %>
                  <%= content_tag('span', nil,  class: 'glyphicon glyphicon-search') %>
               <% end %></td>
              <% document.days_to_reminder %>
            </tr>

      <% end %>

      <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td><%= link_to 'New Doc', new_flat_document_path(@flat), class: "btn btn-primary" %></td>
        <td></td>

          <!-- <td class="remove-padding-table">
          <%= link_to(new_flat_document_path) do %>
          <div class="btn-table-cell text-center">
            <%= content_tag('span', nil,  class: 'glyphicon glyphicon-floppy-open') %>
            </div>
            <% end %>
          </td> -->

      </tr>
    </tbody>
  </table>

  <br>


  <div class="links-table-bottom">
    <div>
      <%= link_to mydashboard_path(@flat) do %>
        <%= content_tag('span', nil,  class: 'glyphicon glyphicon-arrow-left') %>
        <%= content_tag('span', nil,  class: 'glyphicon glyphicon-home') %>
      <% end %>
    </div>
     <div class="link-table-bottom-right">
      <%= link_to flat_tasks_path(@flat) do %>
        <%= content_tag('i', nil,  class: 'fa fa-tasks fa-2x') %>
        <%= content_tag('span', nil,  class: 'glyphicon glyphicon-arrow-right') %>
      <% end %>
    </div>
  </div>


</div>

